
{
  // suggestions
  // "suggest.echodocSupport": true,
  // TODO add more labels and give them cool glyphs
  "suggest.completionItemKindLabels": {
    "text": "t",
    "method": "m",
    "function": "ïž”"
  },

    //explorer
    "explorer.width": 30,
    "explorer.file.showHiddenFiles": true,
    "explorer.file.autoReveal": true,
    "explorer.previewAction.onHover": false,
    "explorer.icon.enableVimDevicons": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5]",
    "explorer.buffer.root.template": "[icon & 1] OPEN EDITORS",
    "explorer.file.root.template": "[icon & 1] PROJECT ([root])",
    "explorer.keyMappings.global": {
    "s": "open:vsplit",
    "mm": "rename",
    "mc": "copyFile",
    "C": "copyFile",
    "md": "delete",
    "D": "delete",
    "ma": "addFile",
    "mA": "addDirectory"
},
    //Csharp 
    "omnisharp.trace.server": "information",
    "omnisharp.debug.server": true,

    // python
    "coc.preferences.formatOnSaveFiletypes": ["py", "yaml", "json"],
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "black",

    	
    // emmet
    "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  }
}
